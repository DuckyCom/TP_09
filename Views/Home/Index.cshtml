@{ //Pagina de LogIn
    ViewData["Title"] = "Index";
}

<h1>TP XX - Index</h1>
@* Confetti xd *@
<script type="text/javascript" src="~/wwwroot/js/confetti-index.js>"></script> 

<script src="~/js/site.js"></script>

<div class="center-container">
    <a class="registro-btn" href="~/Home/RegistroUsuario">Registro</a>
</div>

<form class="row g-3 needs-validation was-validated" novalidate="">
      <div class="col-md-4">
        <label for="validationCustom01" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="username" required="">
        <div class="valid-feedback">
        👍
        </div>
      </div>
      <div class="col-md-4">
        <label for="validationCustom02" class="form-label">Contraseña</label>
        <input type="text" class="form-control" id="contraseña1" required="">
        <div class="valid-feedback">
        👍
        </div>
      </div>
       <div class="col-md-4">
        <label for="validationCustom02" class="form-label"> Escriba nuevamente la Contraseña</label>
        <input type="text" class="form-control" id="contraseña2" required="">
        <div class="valid-feedback">
        👍
        </div>
      </div>
     
      <div class="col-12">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required="">
          <label class="form-check-label" for="invalidCheck">
            De acuerdo con los terminos y condiciones
          </label>
          <div class="invalid-feedback">
            Debes estar de acuerdo con nuestros terminos y condiciones
          </div>
        </div>
      </div>
      <div class="col-12">
        <button onclick="ValidarContraseña(contraseña1, contraseña2)" class="btn btn-secondary" type="submit"> Iniciar sesion</button>
      </div>
      <div class="col-12">
      <button class="btn btn-primary" type="submit">¿Olvidó su contraseña?</button>
    </div>
    </form>
    @* Ver como hacer que cada boton vaya a un distinto .cshtml
       Consejo de binker, usar !important en el css asi "Pisa" el de bootstrap y el nuestro tiene prioridad
       Encriptar contraseña para que cuando verifique con las de la BD coincidan (las de la BD ya van a estar encriptadas) *@